{
    "name": "maxie-systems/web-lib",
    "type": "library",
    "authors": [
        {
            "name": "Maxim Antipin",
            "email": "max.v.antipin@gmail.com",
            "homepage": "https://github.com/max-antipin",
            "role": "Developer"
        }
    ],
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/console": "^6.3",
        "symfony/process": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "MaxieSystems\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MaxieSystems\\Dev\\": "src-dev/"
        }
    },
    "scripts": {
        "test-all": [
            "@php ./vendor/bin/phpunit tests",
            "@php ./vendor/bin/phpcs --standard=PSR12 src",
            "@php ./vendor/bin/phpcs --standard=PSR12 src-dev",
            "@php ./vendor/bin/phpcs --standard=PSR12 tests"
        ],
        "test": "MaxieSystems\\Dev\\ComposerTestCommand",
        "utest": "./vendor/bin/phpunit",
        "utest-cover": [
            "Composer\\Config::disableProcessTimeout",
            "./vendor/bin/phpunit --coverage-html coverage"
        ],
        "test-psr12": "./vendor/bin/phpcs --standard=PSR12",
        "fix-psr12": "./vendor/bin/phpcbf --standard=PSR12"
    }
}
