{
    "name": "maxie-systems/web-lib",
    "description": "",
    "type": "library",
    "authors": [
        {
            "name": "Maxim Antipin",
            "email": "max.v.antipin@gmail.com",
            "homepage": "https://github.com/max-antipin",
            "role": "Developer"
        }
    ],
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "8.2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3",
        "symfony/console": "^6.3",
        "symfony/process": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "MaxieSystems\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MaxieSystems\\Dev\\": "src-dev/"
        }
    },
    "scripts": {
        "test-all": [
            "@php ./vendor/bin/phpunit tests",
            "@code-coverage-report --ignore-threshold ./tests/coverage.txt",
            "@php ./vendor/bin/phpcs --standard=PSR12 --ignore=src/HTTP/ src/ src-dev/ tests/unit/"
        ],
        "test": "MaxieSystems\\Dev\\ComposerTestCommand",
        "test-coverage-html": [
            "Composer\\Config::disableProcessTimeout",
            "@php ./vendor/bin/phpunit --coverage-html tests/coverage-html"
        ],
        "code-coverage-report": "MaxieSystems\\Dev\\ComposerCodeCoverageCommand",
        "test-psr12": "@php ./vendor/bin/phpcs --standard=PSR12",
        "fix-psr12": "@php ./vendor/bin/phpcbf --standard=PSR12"
    }
}
